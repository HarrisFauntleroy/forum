<aside class="sidebar">
  <div>
    <span><%= t("main_menu") %></span>
    <ul>
      <li><%= link_to t("home"), root_path, id: "home_link" %></li>
      <li><%= link_to t("forum"), forums_path, id: "forums_link" %></li>
    </ul>
  </div>
  <hr/>
  <div>
    <span><%= t("welcome") %></span>
    <div>
      <% if user_signed_in? %>
        <div style="margin-bottom: 4px;">
          <%= t("welcome") %>
          <%= link_to current_user.username, current_user %>!
        </div>
        <div>
          <% if current_user&.admin? %>
            <div><%= t("admin") %></div>
          <% elsif current_user&.moderator? %>
            <div><%= t("moderator") %></div>
          <% else %>
            <div><%= t("user") %></div>
          <% end %>
          <div><%= t("registered_member", number: current_user.id) %></div>
          <%= button_to t("devise.sign_out"), destroy_user_session_path, method: :delete %>
        </div>
      <% else %>
        <%= render "devise/sessions/new" %>
        <div>[<%= link_to "Sign up", new_user_registration_path %>]</div>
        <div>[<%= link_to "Forgot password?", new_user_password_path %>]</div>
      <% end %>
    </div>
  </div>
</aside>
