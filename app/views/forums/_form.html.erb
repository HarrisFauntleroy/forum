<%= form_with(model: forum, local: true) do |form| %>
  <% if forum.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(forum.errors.count, "error") %>
        <%= t("prohibited_this_forum_from_being_saved") %>:</h4>
      <ul>
        <% forum.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :category_id, class: "form-label" %>
    <%= form.collection_select :category_id,
                           Category.all,
                           :id,
                           :name,
                           {},
                           { class: "form-select" } %>
  </div>

  <div class="mt-3">
    <%= link_to t("go_back"), :back, class: "btn btn-secondary" %>
    <%= form.submit t("create_forum"), class: "btn btn-primary" %>
  </div>
<% end %>
